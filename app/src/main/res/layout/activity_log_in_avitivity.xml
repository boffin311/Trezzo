<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gym_background"
        tools:context=".Activity.LogInAvitivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:padding="30dp"
        >
    <LinearLayout
            android:layout_width="match_parent"

            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">
        <ImageView android:layout_width="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_call_"
                android:layout_height="30dp"/>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:hint="Mobile No."

                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"

                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
            <ImageView android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_fitness_center_black_24dp"
                    android:layout_height="30dp"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:hint="Gym Id"

                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"

                android:layout_marginTop="30dp"
                android:layout_height="wrap_content">
            <ImageView android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_lock"
                    android:layout_height="30dp"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:hint="Password"
                        android:inputType="textPassword"

                        android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <Button
                android:layout_width="match_parent"
                android:layout_margin="30dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/modified_button"
                android:text="Get Started"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="@string/termsAndConditions"
                android:gravity="center"
                android:layout_height="wrap_content"/>
    </LinearLayout>


</FrameLayout>