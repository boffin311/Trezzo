<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.pinkfry.tech.Tezzo.Activity.PaymentSuccessActivity">

    <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifProgress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/gym_progress_bar" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/linearPaymentDone"
            android:gravity="center"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="250dp"

                android:id="@+id/imagePaymentStatus"
                android:layout_height="200dp" />
        <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="Payment Successful"
                android:textSize="20dp"
                android:id="@+id/tvPaymentStatus"
                android:padding="10dp"
                android:textColor="@color/result_points"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                />
    </LinearLayout>

</FrameLayout>
