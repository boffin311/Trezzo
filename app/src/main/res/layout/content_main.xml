<?xml version="1.0" encoding="utf-8"?>

    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
<LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:nestedScrollingEnabled="true"
        android:background="@color/backgroundColor"
        android:layout_height="match_parent"
      >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            >
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:elevation="5dp"
                android:id="@+id/cardDiet"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:layout_height="wrap_content"
                >
            <ImageView
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:src="@drawable/diet_image"
                    android:layout_height="60dp"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardWorkout"

                android:layout_height="wrap_content"
                >
            <ImageView
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:src="@drawable/workout_image"
                    android:layout_height="60dp"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_columnWeight="1"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardAttendance"
                android:padding="20dp"
                android:layout_rowWeight="1"
                android:layout_height="wrap_content"
                >
            <ImageView
                    android:layout_width="60dp"

                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:src="@drawable/attendance_logo"
                    android:layout_height="60dp"/>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_columnWeight="1"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardPayment"
                android:padding="20dp"
                android:layout_rowWeight="1"
                android:layout_height="wrap_content"
                >
            <ImageView
                    android:layout_width="60dp"

                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:src="@drawable/paytm_image"
                    android:layout_height="60dp"/>


        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:text="Payment Due"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="gone"
            android:id="@+id/tvPaymentDue"
            android:textStyle="bold"
            android:background="@drawable/modified_red_indicator_less_round_edge"
            android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="match_parent"
                     android:textSize="30sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorBlack"
                    android:paddingTop="5dp"
                    android:paddingStart="5dp"
                    android:paddingBottom="10dp"

                    android:text="Notice"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rvNotice"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="true"
                    android:layout_height="match_parent" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="40dp"
                    android:visibility="gone"
                    android:id="@+id/linearNoticeNoInterent"
                    android:gravity="center"
                    android:background="@drawable/modified_edit_text"
                    android:layout_height="match_parent">
            <ImageView
                    android:layout_width="60dp"
                android:id="@+id/noInternetImage"
                android:layout_gravity="center"
                    android:src="@drawable/no_connection"
                    android:layout_height="60dp"/>
                <TextView
                        android:id="@+id/tvRetry"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center"
                        android:paddingStart="50dp"

                        android:paddingEnd="50dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"

                        android:text="Retry"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/modified_rounded_button"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
