<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:padding="10dp"
        tools:context="com.pinkfry.tech.Tezzo.Activity.DietPlanActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/linearWholeDiet"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rvAllDietPlans"
                android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/rvSingleDietPlan"
        />
    </LinearLayout>
    <pl.droidsonroids.gif.GifImageView
            android:layout_width="50dp"
           android:layout_gravity="center"
            android:id="@+id/gifView"
            android:src="@drawable/gym_progress_bar"
            android:layout_height="50dp"/>
    <include layout="@layout/no_internet_screen"
            android:visibility="invisible"/>
</FrameLayout>
